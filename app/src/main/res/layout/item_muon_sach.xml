<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/txt_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_tron"
        android:gravity="center"
        android:text="01"
        android:textAlignment="center"
        android:textColor="@color/mautrang"
        android:textSize="36sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nguoi_muon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người mượn: Nguyễn Trọng Hiếu"
            android:textColor="@color/maudo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_so_dien_thoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: 0945568524"
            android:textColor="@color/mauxanh"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ngay_muon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày mượn: 14/01/2021"
            android:textColor="@color/maucam"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_han_tra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hạn trả: 31/01/2021"
            android:textColor="@color/maucam"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ngay_tra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày trả: 28/01/2021"
            android:textColor="@color/maucam"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ghi_chu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ghi chú: Tốt"
            android:textColor="@color/mauxanhla"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>